<h2>All Products</h2>
<div class="product-index">
  <% @products.each do |product| %>
    <% if product.retired == false %>
      <ul class="product-item">
        <li><%= link_to image_tag(product.photo_url, height: "250", alt: "product image"), product_path(product.id)%></li>
        <li>
          <p class="product-name"><%= link_to product.name, product_path(product.id) %></p>
        </li>
        <li>$<%= product.price%></li>
        <li>
          <p class="product-description"><%= product.description %></p>
        </li>
        <li><p class="product-rating"><%= product.average_review %></p></li>
      </ul>
    <% end %>
  <% end %>
</div>
