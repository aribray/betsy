
<h3>Leave a Review!</h3>

<%if @review %>
  <% if @review.errors.any? %>
    <ul class="errors">
      <% @review.errors.each do |column, message| %>
      <li>
          <strong><%= column.capitalize %> </strong> <%= message %>
      </li>
      <% end %>
  </ul>
  <% end %>
<%end%>
<main>

  <%= form_with model: @review, :url => product_reviews_path(@product.id), local: true do |f| %>

    <%= f.label :rating %>
    <%= f.select :rating, (1..5) %>

    <%= f.label :description %>
    <%= f.text_field :description %>

    <%= f.submit "Create Review", class: "new-review__submit-btn" %>
  <% end %>
</main>
