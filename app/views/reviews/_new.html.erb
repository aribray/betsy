<%if @review %>
  <% if @review.errors.any? %>
    <ul class="errors">
      <% @review.errors.each do |column, message| %>
      <li>
          <strong><%= column.capitalize %> </strong> <%= message %>
      </li>
      <% end %>
  </ul>
  <% end %>
<%end%>

<section>
  <%= form_with model: @review, :url => product_reviews_path(@product.id), local: true do |f| %>

<div class="form-group">
    <%= f.label :rating %>
    <%= f.select :rating, (1..5), {}, class: "form-control" %>
    </div>

<div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
</div>
    <%= f.submit "Create Review", class: "new-review__submit-btn btn btn-block" %>
  <% end %>
</section>
