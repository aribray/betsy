<h1>Reviews#new</h1>
<p>Find me in app/views/reviews/new.html.erb</p>

<p><i>~this page probably won't exist, and there will instead be a form on each product's show page to leave a review~</i></p>
<%if @review %>
  <% if @review.errors.any? %>
    <ul class="errors">
      <% @review.errors.each do |column, message| %>
      <li>
          <strong><%= column.capitalize %> </strong> <%= message %>
      </li>
      <% end %>
  </ul>
  <% end %>
<%end%>
<main>

  <%= form_with model: @review, :url => product_reviews_path(@product.id)  do |f| %>

    <%= f.label :rating %>
    <%= f.select :rating, (1..5) %>

    <%= f.label :description %>
    <%= f.text_field :description %>

    <%= f.submit "Create Review", class: "new-review__submit-btn" %>
  <% end %>
</main>
