<h2>Products in <%=@category.name%> Category</h2>

<% @category.products.each do |product| %>
  <% if product.retired == false%>
    <ul>
      <li>
        <%=image_tag(product.photo_url, height: "250", alt: "product image")%>    
      </li>
      <li>
        <h3><%= link_to product.name, product_path(product.id) %></h3>
      </li>
      <li>
        <%= product.description%>
      </li>
      <li>
        $<%= product.price%>
      </li>
      <li>
        <%= product.quantity%>
      </li>
    </ul>
  <%end%>
<%end%>


